<div class="row">
  <div class="col s12 m10 offset-m1 l8 offset-l2">
    <div class="card">
      <div class="card-image">
        <img src="/img/addproject.png" alt="">
        <span class="card-title add-project" style="font-weight: bolder;">
          Crear proyecto
        </span>
      </div>
      <form autocomplete="off" action="/project/add" method="post">
        <div class="card-content">
          <div class='input-field'>
            <label for='project-name'>Nombre de tu idea de proyecto</label>
            <input
              placeholder='El nombre del proyecto aqui üëá'
              id='project-name'
              name='name'
              type='text'
              class="validate"
              value="{{ project.name }}"
              required
            />
            <span 
              class="helper-text"
              data-error="Es necesario ingresar el nombre del proyecto"
              data-success="‚úÖ Correcto"
              ></span>
            {{#if errorModel.name }}
            <span style="color: crimson;">Error: {{ errorModel.name }}</span>
            {{/if}}
          </div>
          <div class='input-field'>
            <label for='project-description'>
              Descripci√≥n del proyecto
            </label>
            <textarea
              id='project-description'
              name='description'
              class="materialize-textarea validate" required>{{project.description}}</textarea>
              <span 
              class="helper-text"
              data-error="Debe ingresar una descripci√≥n"
              data-success="‚úÖ Correcto"
              ></span>
            {{#if errorModel.description }}
            <span style="color: crimson;">Error: {{ errorModel.description }}</span>
            {{/if}}
          </div>
        </div>
        <div class="card-action">
          <button type="submit" class="blue darken-3 waves-effect waves-light btn">
            <i class="material-icons left">note_add</i> Agregar
          </button>
        </div>
      </form>
    </div>
  </div>
</div>