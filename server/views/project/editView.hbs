<div class='row'>
  <div class='col s12 m10 offset-m1 18 offset-12'>
    <div class='card'>
      <div class='card-image'>
        <img src='/images/addproject.png' alt='Imagen creacion de proyecto' />
        <span class='card-title add-project' style='font-weight: bolder;'>
          Editar Proyecto
        </span>
      </div>
      <form autocomplete='off' action="/project/edit/{{ project._id }}?_method=put" method="post">
        <div class='card-content'>
          <div class='input-field'>
            <label for='project-name'>
              Nombre del proyecto
            </label>
            <input
              type='text'
              id='project-name'
              name='name'
              placeholder='Ingrese nombre del proyecto'
              class='validate'
              value='{{project.name}}'
              required
            />
            <span
              class='helper-text'
              data-error='üëÜ Es necesario ingresar el nombre del proyecto üëÜ'
              data-success='‚úÖ Correcto'
            ></span>
            {{#if errorModel.name}}
              <span style='color: crimson;'>Error: {{errorModel.name}}</span>
            {{/if}}
          </div>
          <div class='input-field'>
            <label for='project-description'>
              Descripci√≥n del proyecto
            </label>
            <textarea
              name='description'
              id='project-description'
              class='materialize-textarea validate'
              required
            >{{project.description}}</textarea>
            <span
              class='helper-text'
              data-error='üëÜ Debe ingresar una descripci√≥n üëÜ'
              data-success='‚úÖ Correcto'
            ></span>
            {{#if errorModel.description}}
              <span style='color: crimson;'>Error:
                {{errorModel.description}}</span>
            {{/if}}
          </div>
        </div>
        <div class='card-action'>
          <button class='blue darken-3 waves-effect waves-light btn'>
            <i class='material-icons left'>edit</i>
            Editar
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
